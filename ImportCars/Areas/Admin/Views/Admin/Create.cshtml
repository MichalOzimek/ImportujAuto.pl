@model ImportCars.Areas.Admin.Models.Admin

@{
    ViewData["Title"] = "Utwórz konto admina";
    Layout = "../Shared/_LayoutBlank.cshtml";
}

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h1 class="my-3">Utwórz konto</h1>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label asp-for="Email" class="form-label" for="form3Example3">Email</label>
                        <input asp-for ="Email" type="email" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Wprowadz adres Email" />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label asp-for="Password" class="form-label" for="form3Example4">Hasło</label>
                        <input asp-for="Password" type="password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Wprowadz hasło" /> 
                    </div>

                    <!-- Confirm Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="form3Example4">Potwierdz hasło</label>
                        <input type="password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Potwierdz hasło" />
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input type="submit" value="Utwórz konto" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
