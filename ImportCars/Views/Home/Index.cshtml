        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 144.54 17.34" preserveAspectRatio="none" fill="currentColor"><path d="M144.54,17.34H0V0H144.54ZM0,0S32.36,17.34,72.27,17.34,144.54,0,144.54,0"></path></svg>
    </div>
</header>

<!--Aukcje wkrótce-->
<section class="bg-white py-10" id="auctions">
    <div class="text-center"><h2 class="section-title">Aukcje wkrótce</h2></div>
    <div class="container px-4">
        <div class="owl-carousel carousel-dark">
            @foreach (var item in Model.Auctions)
            {
                <div class="">
                    <a class="card lift h-100" href="@item.Url">
                        <img class="card-img-top" src="@Url.Content(item.Images?.FirstOrDefault()?.Path)" alt="..." />
                        <div class="card-body">
                            <h4 class="card-title mb-2">@item.Name</h4>
                            <ul class="car-info">
                                <li><span>@item.ProductionYear</span></li>
                                <li><span>@item.EngineType</span></li>
                                <li><span>@item.EngineCapacity</span></li>
                            </ul>
                            <span>Przewidywana cena: </span><span class="auction-price">@string.Concat(item.Price, " zł")</span>
                        </div>
                        <div class="card-footer bg-transparent border-top d-flex align-items-center justify-content-between">
                            <div class="small auction-text-primary">Sprawdz</div>
                            <div class="small auction-text-primary"><i data-feather="arrow-right"></i></div>
                        </div>
                    </a>
                </div>
            }
        </div>

        <!--FAQ-->
        <div class="text-center mb-4"><h2 class="section-title">Często zadawane pytania</h2></div>
        <div class="accordion" id="accordionFaq">
            @{
                if (Model.Questions != null && Model.Questions.Any())
                {
                    var questionList = Model.Questions.ToList(); // Convert to a list for indexed access

                    for (int i = 0; i < questionList.Count; i++)
                    {
                        var question = questionList[i];
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading@(i)">
                                <button class="accordion-button @(i == 0 ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(i)" aria-expanded="@(i == 0)" aria-controls="collapse@(i)">
                                    @question.Question
                                </button>
                            </h2>
                            <div id="collapse@(i)" class="accordion-collapse collapse @(i == 0 ? "show" : "")" aria-labelledby="heading@(i)" data-bs-parent="#accordionFaq">
                                <div class="accordion-body">
                                    @question.Answer
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
        @*        <button class="carousel-control-prev" type="button" style="left: -204px">
        <span class="carousel-control-prev-icon"></span>
        <span class="visually-hidden">Previous</span>
        </button>
